html_content = """
<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Чек-лист по заготовкам</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 8px; border: 1px solid #ccc; text-align: left; }
    th { background-color: #f2f2f2; }
    .checkbox-cell { text-align: center; width: 80px; }
  </style>
</head>
<body>
  <h2>✅ Чек-лист по заготовкам</h2>
  <table>
    <tr>
      <th>Заготовка</th>
      <th class="checkbox-cell">Сделано</th>
      <th class="checkbox-cell">Не сделано</th>
    </tr>
"""

items = [
    "Рис", "Сёмга слайсы", "Сёмга внутряк", "Угорь слайсы", "Угорь внутряк",
    "Тунец", "Креветки", "Мидии", "Хот мидии", "Сёмга жаренная",
    "Кримета", "Кляр", "Чука", "Тобико красная", "Тобико оранжевая",
    "Огурец", "Краб", "Сыр Эдамер", "Дайкон", "Кунжут микс",
    "Мицукан", "Спайси соус", "Васаби, Имбирь, Соевый", "Соуснички"
]

for item in items:
    html_content += f"""
    <tr>
      <td>{item}</td>
      <td class="checkbox-cell"><input type="checkbox"></td>
      <td class="checkbox-cell"><input type="checkbox"></td>
    </tr>
    """

html_content += """
  </table>
</body>
</html>
"""

# Save to file
html_path = "/mnt/data/checklist_zagotovki.html"
with open(html_path, "w", encoding="utf-8") as f:
    f.write(html_content)

html_path  # Return path to download

